# [PackageDev] target_format: plist, ext: tmPreferences
name: JavaScript Indent
scope: source.js
settings:
  bracketIndentNextLinePattern: >-
    (?x)
      ^ \s* \b(if|while|else)\b [^;]* $
    | ^ \s* \b(for)\b .* $
  decreaseIndentPattern: ^(.*\*/)?\s*[}].*$
  increaseIndentPattern: ^.*\{[^}"']*$
